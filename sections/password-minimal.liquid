{% comment %}Minimal password page section{% endcomment %}
<section class="password-minimal">
  <div class="password-container">
    <!-- Logo -->
    <div class="password-logo">
      <img
        src="{{ 'runpod-logo.svg' | asset_url }}"
        alt="{{ shop.name }}"
        class="logo-img"
        loading="lazy"
        width="120"
        height="120"
      >
    </div>

    <!-- Store Password Message -->
    {%- if shop.password_message != blank -%}
      <div class="password-message">
        {{ shop.password_message }}
      </div>
    {%- endif -%}

    <!-- Password Form -->
    <password-modal>
      <details class="password-modal">
        <summary class="password-toggle" aria-haspopup="dialog">
          <span class="password-link">
            {{ 'general.password_page.login_password_button' | t }}
          </span>
        </summary>
        <div class="modal-content" role="dialog" aria-modal="true">
          <div class="password-form-wrapper">
            <button type="button" class="close-button" aria-label="Close">Ã—</button>
            <h2 class="form-heading">{{ 'general.password_page.login_form_heading' | t }}</h2>
            {%- form 'storefront_password', class: 'password-form' -%}
              <div class="form-field{% if form.errors %} form-field--error{% endif %}">
                <input
                  type="password"
                  name="password"
                  id="Password"
                  class="form-input"
                  autocomplete="current-password"
                  placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}"
                  {% if form.errors %}
                    aria-invalid="true"
                  {% endif %}
                >
                {%- if form.errors -%}
                  <div class="form-error">
                    {{ 'general.password_page.login_form_error' | t }}
                  </div>
                {%- endif -%}
              </div>
              <button type="submit" class="form-submit">
                {{ 'general.password_page.login_form_submit' | t }}
              </button>
            {%- endform -%}
          </div>
        </div>
      </details>
    </password-modal>
  </div>

  <style>
    .password-minimal {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      background: #fff;
    }

    .password-container {
      text-align: center;
      max-width: 400px;
      width: 100%;
    }

    .password-logo {
      margin-bottom: 3rem;
    }

    .password-logo .logo-img {
      max-width: 120px;
      height: auto;
    }

    .password-message {
      margin-bottom: 2rem;
      font-size: 1.6rem;
      line-height: 1.4;
      color: #666;
    }

    .password-toggle {
      cursor: pointer;
      list-style: none;
      outline: none;
    }

    .password-link {
      display: inline-block;
      padding: 1rem 2rem;
      background: #000;
      color: #fff;
      text-decoration: none;
      border-radius: 4px;
      font-size: 1.4rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .password-toggle:hover .password-link {
      background: #333;
    }

    .modal-content {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.8);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
    }

    .password-form-wrapper {
      background: #fff;
      padding: 3rem;
      border-radius: 8px;
      max-width: 400px;
      width: 90%;
      position: relative;
    }

    .close-button {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: none;
      border: none;
      font-size: 2rem;
      cursor: pointer;
      color: #666;
      line-height: 1;
    }

    .close-button:hover {
      color: #000;
    }

    .form-heading {
      margin: 0 0 2rem;
      font-size: 2rem;
      text-align: center;
    }

    .form-field {
      margin-bottom: 1.5rem;
    }

    .form-input {
      width: 100%;
      padding: 1rem;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 1.4rem;
      outline: none;
    }

    .form-input:focus {
      border-color: #000;
    }

    .form-field--error .form-input {
      border-color: #d32f2f;
    }

    .form-error {
      color: #d32f2f;
      font-size: 1.2rem;
      margin-top: 0.5rem;
    }

    .form-submit {
      width: 100%;
      padding: 1rem 2rem;
      background: #000;
      color: #fff;
      border: none;
      border-radius: 4px;
      font-size: 1.4rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .form-submit:hover {
      background: #333;
    }

    /* Hide modal by default */
    .password-modal:not([open]) .modal-content {
      display: none;
    }

    @media (max-width: 600px) {
      .password-form-wrapper {
        padding: 2rem;
      }

      .password-logo .logo-img {
        max-width: 80px;
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const modal = document.querySelector('.password-modal');
      const closeBtn = document.querySelector('.close-button');

      if (closeBtn && modal) {
        closeBtn.addEventListener('click', () => {
          modal.open = false;
        });
      }
    });
  </script>
</section>

{% schema %}
{
  "name": "Password minimal",
  "tag": "section",
  "class": "section-password-minimal",
  "settings": []
}
{% endschema %}
