{% comment %}
  Minimal Collection Grid Section
  Displays products from the current collection in a simple responsive grid.
  Matches the homepage layout exactly.
{% endcomment %}

<section class="all-products">
  <div class="products-container page-width">
    <!-- Products Grid -->
    <div class="products-grid">
      {%- for product in collection.products -%}
        <a
          href="{{ product.url }}"
          class="product-card"
        >
          <div class="image-wrapper">
            {%- if product.featured_media -%}
              <img
                src="{{ product.featured_media | image_url: width: 600 }}"
                alt="{{ product.featured_media.alt | default: product.title | escape }}"
                loading="lazy"
                width="600"
                height="600"
                class="primary-image"
              >
              {%- if product.media.size > 1 -%}
                <img
                  src="{{ product.media[1] | image_url: width: 600 }}"
                  alt="{{ product.media[1].alt | default: product.title | escape }}"
                  loading="lazy"
                  width="600"
                  height="600"
                  class="secondary-image"
                >
              {%- endif -%}
            {%- endif -%}
            <div class="overlay">
              <h3 class="product-title">{{ product.title }}</h3>
              <span class="product-price">{{ product.price | money }}</span>
            </div>
          </div>
          <div class="mobile-info">
            <h3 class="product-title">{{ product.title }}</h3>
            <span class="product-price">{{ product.price | money }}</span>
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>

  <style>
    .all-products .products-container {
      margin: 0 auto;
      padding: 2rem 0;
    }

    /* Products Grid Styles */
    .all-products .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 2rem;
    }

    .all-products .product-card {
      text-decoration: none;
      color: inherit;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 0.5rem;
      position: relative;
      transition: opacity 0.3s ease;
    }

    .all-products .product-card img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }

    .all-products .secondary-image {
      position: absolute;
      top: 0;
      left: 0;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .all-products .product-card:hover .secondary-image {
      opacity: 1;
    }

    .all-products .product-card:hover .primary-image {
      opacity: 0;
    }

    .all-products .product-title {
      font-size: 1.4rem;
      font-weight: 600;
      margin: 0;
    }

    .all-products .product-price {
      font-size: 1.3rem;
    }

    .image-wrapper {
      position: relative;
      width: 100%;
    }

    .overlay {
      position: absolute;
      inset: 0;
      background: rgba(255, 255, 255, 0.7);
      color: #000;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s;
    }

    .overlay .product-title,
    .overlay .product-price {
      color: #000;
    }

    .product-card:hover .overlay {
      opacity: 1;
    }

    .product-card:hover img {
      filter: grayscale(100%);
    }

    .mobile-info {
      display: none;
    }

    /* Mobile Styles */
    @media (max-width: 750px) {
      .overlay {
        display: none;
      }

      .mobile-info {
        display: block;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Collection minimal",
  "tag": "section",
  "class": "section-collection-minimal",
  "settings": []
}
{% endschema %}
